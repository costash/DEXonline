<div id="wotdArchiveHeader">
  {if $showPrev==1}
    <span onclick="loadAjaxContent('{$wwwRoot}{$prevMonth}', '#wotdArchive');" class="nav" id="navLeft"></span>
  {else}
    &nbsp
  {/if}

  <p id="wotdDate">{$month} {$year}</p>

  {if $showNext==1}
    <span onclick="loadAjaxContent('{$wwwRoot}{$nextMonth}', '#wotdArchive');" class="nav" id="navRight"></span>
  {else}
    &nbsp;
  {/if}
</div>


<table class="wotdArchiveTable">
  <tr class="wotdDays">
    <td>Luni</td>
    <td>Marți</td>
    <td>Miercuri</td>
    <td>Joi</td>
    <td>Vineri</td>
    <td>Sâmbătă</td>
    <td>Duminică</td>
  </tr>
{foreach from=$words item=word key=row_id name=loop}
    {if $smarty.foreach.loop.first}
      {if $word->dayOfWeek == 2}
      <tr>
      {else}
      {assign var=loopCount value=6}
      {if $word->dayOfWeek > 1}
      {assign var=loopCount value=$word->dayOfWeek-2}
      {/if}
      <tr>
      {section name=preCal loop=$loopCount}
      <td>&nbsp;</td>
      {/section}
      {/if}
    {/if}
    {if $word->dayOfWeek == 2}<tr>{/if}
    <td class="activeMonth">
      <div class="wotdDoM">{$word->dayOfMonth}</div>
      <div>{if $word->lexicon}<a href="{$wwwRoot}cuvantul-zilei/{$word->linkDate}">{$word->lexicon}</a>{else}&nbsp;{/if}</div>
    </td>
    {if $word->dayOfWeek == 1}</tr>{/if}
    {if $smarty.foreach.loop.last}
      {if $word->dayOfWeek == 1}
      </tr>
      {else}
        {section name=preCal start=$word->dayOfWeek-2 loop=6}
        <td>&nbsp;</td>
        {/section}
        </tr>
      {/if}
    {/if}
{/foreach}
</table>
